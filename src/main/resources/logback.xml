<configuration>
	<appender name="STDOUT"
		class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%msg%n</pattern>
		</encoder>
	</appender>
	
	 <appender name="FILE" class="ch.qos.logback.core.FileAppender">
	      <file>log.txt </file>
	      <append>true</append>
	      <encoder>
	         <pattern>%msg%n</pattern>
	      </encoder>
	   </appender>
	
	<root level="INFO">
		<appender-ref ref="FILE" />
		<appender-ref ref="STDOUT" />
	</root>
</configuration>